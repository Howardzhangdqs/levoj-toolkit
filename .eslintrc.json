{
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        // tab缩进
        "indent": [0, 4],
        // 使用双引号
        "quotes": ["error", "double"],
        // 强制分号
        "semi": ["error", "always"]
    },
    "extends": [
        // "eslint:recommended"
    ],
    "ignorePatterns": [
        "node_modules/",
        "dist/",
        "build/"
    ]
}